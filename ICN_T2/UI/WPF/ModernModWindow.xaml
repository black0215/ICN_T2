<Window x:Class="ICN_T2.UI.WPF.ModernModWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:views="clr-namespace:ICN_T2.UI.WPF.Views"
        Title="Nexus Mod Studio - Puni Edition" Height="675" Width="1200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/PuniPuniTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 1. Puni Gold Title Style -->
            <Style x:Key="PuniGoldTitle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Gë§ˆì¼“ ì‚°ìŠ¤ TTF Bold, ONE Mobile POP, Malgun Gothic, Segoe UI"/>
                <Setter Property="FontSize" Value="48"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <!-- Enhanced Layered Shadow: Depth (6px) + Edge (1px simulated) -->
                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.7"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground">
                    <Setter.Value>
                        <!-- Requested Horizontal Gradient: #E7ECF3 -> #EFDAE3 -->
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Color="#E7ECF3" Offset="0"/>
                            <GradientStop Color="#EFDAE3" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 2. Puni Nav Button Style (Narrow & Grouped) -->
            <Style x:Key="PuniNavButton" TargetType="RadioButton">
                <Setter Property="Background" Value="#08FFD700"/>
                <!-- Subtle Yellow Tint -->
                <Setter Property="BorderBrush" Value="#15FFFFFF"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Height" Value="54"/>
                <!-- Slightly Shorter -->
                <Setter Property="Padding" Value="10,0"/>
                <!-- Narrower Padding -->
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Setter Property="Foreground" Value="#1A1C1E"/>
                <Setter Property="FontFamily" Value="Gë§ˆì¼“ ì‚°ìŠ¤ TTF Bold, ONE Mobile POP, Malgun Gothic"/>
                <Setter Property="FontSize" Value="16"/>
                <!-- Slightly Smaller font for narrow feel -->
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <ControlTemplate.Resources>
                                <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource PuniYellow}"/>
                                <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource PuniGold}"/>
                                <LinearGradientBrush x:Key="SelectedBgBrush" StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#50FFD700" Offset="0"/>
                                    <GradientStop Color="#15FFD700" Offset="1"/>
                                </LinearGradientBrush>
                            </ControlTemplate.Resources>
                            <Grid>
                                <Border x:Name="border" 
                                        CornerRadius="12" 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}"
                                        RenderTransformOrigin="0.5,0.5">
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                                    </Border.RenderTransform>

                                    <ContentPresenter x:Name="content" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- Hover State -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#15FFD700"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HoverBrush}"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#FFFFD700" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <!-- Selected State (Checked) -->
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource SelectedBgBrush}"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HoverBrush}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="1.2"/>
                                    <Setter Property="Foreground" Value="#19232D"/>
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <!-- Pressed State -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 2.2. Modding Tool Button Style (Bag + Icon A/B) -->
            <Style x:Key="IconMenuButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- 1. Bag Background (Circle slot) -->
                                <Image Source="{Binding BagIconPath}" Stretch="Uniform"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <!-- 2. Icon A (Normal) - ì›ë³¸ì´ icon_bë³´ë‹¤ 2ë°° í¬ë¯€ë¡œ 50% í¬ê¸°ë¡œ -->
                                <Image x:Name="IconA" Source="{Binding IconAPath}" Stretch="Uniform"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="20" Opacity="1"/>

                                <!-- 3. Icon B (Hover) - Initially hidden -->
                                <Image x:Name="IconB" Source="{Binding IconBPath}" Stretch="Uniform"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="8" Opacity="0"/>

                                <!-- 4. Text Overlay - Position at bottom -->
                                <TextBlock Text="{Binding Title}"
                                           HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                           TextAlignment="Center"
                                           FontFamily="Gë§ˆì¼“ ì‚°ìŠ¤ TTF bold, Malgun Gothic" FontWeight="Bold" FontSize="12"
                                           Margin="0,0,0,8"
                                           LineHeight="14"
                                           TextOptions.TextFormattingMode="Display"
                                           TextOptions.TextRenderingMode="ClearType"
                                           TextOptions.TextHintingMode="Fixed"
                                           SnapsToDevicePixels="True"
                                           UseLayoutRounding="True">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="WhiteSmoke"/>
                                    </TextBlock.Foreground>
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="1" ShadowDepth="1" Opacity="1"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="IconA" Property="Opacity" Value="0"/>
                                    <Setter TargetName="IconB" Property="Opacity" Value="1"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- 2.1. Puni Icon Button Style (For standard buttons like Back) -->
            <Style x:Key="PuniIconButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#08FFD700"/>
                <Setter Property="BorderBrush" Value="#15FFFFFF"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Height" Value="54"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <ControlTemplate.Resources>
                                <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource PuniYellow}"/>
                            </ControlTemplate.Resources>
                            <Grid>
                                <Border x:Name="border" 
                                        CornerRadius="12" 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}"
                                        RenderTransformOrigin="0.5,0.5">
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#15FFD700"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HoverBrush}"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#FFFFD700" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 3. Puni Primary Action Button Style -->
            <Style x:Key="PuniButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource PuniYellowBrush}"/>
                <Setter Property="Foreground" Value="#1A1C1E"/>
                <Setter Property="FontFamily" Value="Gë§ˆì¼“ ì‚°ìŠ¤ TTF Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="25,12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="15" 
                                    Padding="{TemplateBinding Padding}"
                                    SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FFD700" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource PuniGoldBrush}"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#FFB800" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 4. Puni Cancel/Secondary Button Style -->
            <Style x:Key="PuniCancelButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#666"/>
                <Setter Property="FontFamily" Value="Gë§ˆì¼“ ì‚°ìŠ¤ TTF Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="25,12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="#30000000" 
                                    BorderThickness="1" 
                                    CornerRadius="15" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#10000000"/>
                                    <Setter Property="Foreground" Value="#333"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Main Container -->
    <Border CornerRadius="20" BorderThickness="1" BorderBrush="#30FFFFFF" ClipToBounds="True">
        <Grid>
            <!-- 0. Void Background (ì½˜í…ì¸ ê°€ ì¤„ì–´ë“¤ ë•Œ ë“œëŸ¬ë‚˜ëŠ” ê²€ì • ë°°ê²½) -->
            <Border x:Name="VoidBackground" Background="Black" CornerRadius="20"/>

            <!-- Squeeze Container (Pull-back ì‹œ ì´ ì»¨í…Œì´ë„ˆì˜ ScaleXë§Œ ì¤„ìž„) -->
            <Border x:Name="SqueezeContainer" CornerRadius="20" ClipToBounds="True" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform x:Name="SqueezeScale" ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>
                <Grid>
                    <!-- A. Background Layer -->
                    <!-- User's "Emotional" Puni Background -->
                    <Border Name="BackgroundContainer" CornerRadius="20" RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Border.RenderTransform>
                        <Border.Background>
                            <ImageBrush ImageSource="pack://application:,,,/ICN_T2;component/Resources/MenuBG/pz_bg_e159_01.png" Stretch="UniformToFill"
                                RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border.Background>
                    </Border>

                    <!-- B. Main App Content (Initially Hidden) -->
                    <!-- Increased size: Margin 100->50 -->
                    <!-- MainContentPanel ë³´ì´ê¸° d:Visibility="Visible"  ìˆ¨ê¸°ê¸° d:Visibility="Collapsed" -->
                    <Border x:Name="MainContentPanel"
                        Visibility="Hidden"
                        d:Visibility="Visible"
                        Opacity="0"
                        d:Opacity="1"
                        Margin="50,50,50,50"
                        ClipToBounds="True"
                        CornerRadius="40"
                        Background="#60FFFFFF"
                        RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="ContentScale" ScaleX="1" ScaleY="1"/>
                                <TranslateTransform x:Name="ContentSlide" X="0" Y="0"/>
                            </TransformGroup>
                        </Border.RenderTransform>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="30" ShadowDepth="10" Direction="270"/>
                        </Border.Effect>

                        <Grid x:Name="MainContentRootGrid" Margin="40">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Title Row -->
                                <RowDefinition Height="*"/>
                                <!-- Content Row -->
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- Sidebar Area (approx 240) -->
                                <ColumnDefinition Width="*"/>
                                <!-- Right Content Area (ì˜¤ë¥¸ìª½ ì°½) -->
                            </Grid.ColumnDefinitions>

                            <!-- Background Path (Spans Header and Content rows for the right side) -->
                            <Border x:Name="SteppedBackgroundBorder"
                                Grid.Row="0" Grid.RowSpan="2"
                                Grid.Column="0" Grid.ColumnSpan="2"
                                Background="Transparent"
                                BorderThickness="0"
                                CornerRadius="20"
                                ClipToBounds="False">

                                <!-- Geometry Path -->
                                <Path x:Name="SteppedBackgroundPath"
                                  Fill="#80FFFFFF"
                                  Stroke="#30FFFFFF"
                                  StrokeThickness="1"
                                  StrokeLineJoin="Round"/>
                            </Border>


                            <!-- 1. Header Text -->
                            <TextBlock x:Name="TxtMainHeader"
                               Text="ë©”ì¸ë©”ë‰´"
                               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                               Margin="10,0,0,30"
                               Opacity="0"
                               Style="{StaticResource PuniGoldTitle}"
                               RenderTransformOrigin="0.5,0.5"
                               HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform X="-150"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>

                            <!-- 2. Split Layout (The left side stays in Row 1, Col 0. The right side contents move to Row 1, Col 1) -->
                            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <!-- Sidebar -->
                                    <ColumnDefinition Width="20"/>
                                    <!-- Spacer -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- Right Content Interaction Layer -->
                                </Grid.ColumnDefinitions>

                                <!-- Left Sidebar -->
                                <Border x:Name="LeftSidebarBorder" Grid.Column="0" Width="220" Background="#20FFFFFF" CornerRadius="20" Padding="12" Height="Auto" VerticalAlignment="Top"
                                BorderBrush="#50FFFFFF" BorderThickness="1">
                                    <Grid>
                                        <!-- Initial Project Menu Buttons -->
                                        <StackPanel x:Name="ProjectMenuButtons">
                                            <!-- Button 1: Project Menu -->
                                            <RadioButton Style="{StaticResource PuniNavButton}" GroupName="NavGroup" IsChecked="True">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Project.png" Width="20" Height="20" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,8,0"/>
                                                    <TextBlock Text="í”„ë¡œì íŠ¸ ë©”ë‰´" 
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    FontWeight="Normal"/>
                                                </StackPanel>
                                            </RadioButton>

                                            <!-- Button 2: Tools -->
                                            <RadioButton Style="{StaticResource PuniNavButton}" GroupName="NavGroup">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Tool.png" Width="20" Height="20" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,8,0"/>
                                                    <TextBlock Text="ë„ êµ¬" VerticalAlignment="Center" FontSize="20" FontWeight="Normal"/>
                                                </StackPanel>
                                            </RadioButton>

                                            <!-- Button 3: Settings -->
                                            <RadioButton Style="{StaticResource PuniNavButton}" GroupName="NavGroup">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Option.png" Width="20" Height="20" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,8,0"/>
                                                    <TextBlock Text="ì„¤ ì •" VerticalAlignment="Center" FontSize="20" FontWeight="Normal"/>
                                                </StackPanel>
                                            </RadioButton>

                                            <!-- Extra: CherryMan Icon with Floating Animation -->
                                            <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/CherryMan.png" 
                                       Height="120" Margin="0,20,0,0"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       RenderTransformOrigin="0.5,0.5">
                                                <Image.RenderTransform>
                                                    <TranslateTransform x:Name="MascotTranslate"/>
                                                </Image.RenderTransform>
                                                <Image.Triggers>
                                                    <EventTrigger RoutedEvent="Image.Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                                <DoubleAnimation Storyboard.TargetName="MascotTranslate" 
                                                                     Storyboard.TargetProperty="Y" 
                                                                     From="0" To="-10" Duration="0:0:2">
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <SineEase EasingMode="EaseInOut"/>
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Image.Triggers>
                                            </Image>
                                        </StackPanel>

                                        <!-- Modding Menu Buttons (Hidden by default) -->
                                        <StackPanel x:Name="ModdingMenuButtons" Visibility="Collapsed" Opacity="0">
                                            <!-- Back Button -->
                                            <Button x:Name="BtnBackOnly" Style="{StaticResource PuniIconButtonStyle}" Margin="0,0,0,10" Click="BtnBackToMainMenu_Click" ToolTip="ë’¤ë¡œê°€ê¸°">
                                                <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Back.png" Width="24" Height="24"/>
                                            </Button>

                                            <!-- Sidebar Separator & Tool Buttons (Initially Hidden) -->
                                            <StackPanel x:Name="ToolSidebarButtons" Visibility="Collapsed">
                                                <!-- Separator Line -->
                                                <Border Height="1" Background="#40000000" Margin="10,0,10,15"/>

                                                <!-- 3 Example Bag Icon Buttons -->
                                                <Button Style="{StaticResource PuniIconButtonStyle}" Margin="0,0,0,15" ToolTip="ì˜ˆì‹œ ë„êµ¬ 1">
                                                    <Image Source="pack://application:,,,/ICN_T2;component/Resources/Tribe/icon_b1.png" Width="32" Height="32"/>
                                                </Button>
                                                <Button Style="{StaticResource PuniIconButtonStyle}" Margin="0,0,0,15" ToolTip="ì˜ˆì‹œ ë„êµ¬ 2">
                                                    <Image Source="pack://application:,,,/ICN_T2;component/Resources/Tribe/icon_b2.png" Width="32" Height="32"/>
                                                </Button>
                                                <Button Style="{StaticResource PuniIconButtonStyle}" Margin="0,0,0,15" ToolTip="ì˜ˆì‹œ ë„êµ¬ 3">
                                                    <Image Source="pack://application:,,,/ICN_T2;component/Resources/Tribe/icon_b3.png" Width="32" Height="32"/>
                                                </Button>
                                            </StackPanel>

                                            <RadioButton x:Name="NavProject" Style="{StaticResource PuniNavButton}" GroupName="NavGroup" IsChecked="True">
                                                <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Project.png" Width="24" Height="24" Margin="0,5"/>
                                            </RadioButton>
                                            <RadioButton x:Name="NavTool" Style="{StaticResource PuniNavButton}" GroupName="NavGroup">
                                                <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Tool.png" Width="24" Height="24" Margin="0,5"/>
                                            </RadioButton>
                                            <RadioButton x:Name="NavOption" Style="{StaticResource PuniNavButton}" GroupName="NavGroup">
                                                <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Option.png" Width="24" Height="24" Margin="0,5"/>
                                            </RadioButton>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Right Content Area (Interaction Layer) -->
                                <!-- ì˜¤ë¥¸ìª½ ì°½-->
                                <Grid x:Name="RightContentArea" Grid.Column="2" Margin="0,0,10,15">
                                    <Grid x:Name="ProjectMenuContent">
                                        <!-- 1. Project List View -->
                                        <Grid x:Name="ProjectListView" Margin="25">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                                <TextBlock Text="ë³´ìœ í•œ í”„ë¡œì íŠ¸" FontSize="24" FontFamily="Gë§ˆì¼“ ì‚°ìŠ¤ TTF Bold" Foreground="#1A1C1E" VerticalAlignment="Center"/>
                                                <Button x:Name="BtnShowCreateForm" Content="+ NEW" HorizontalAlignment="Right"
                                                Style="{StaticResource PuniButtonStyle}" Click="BtnShowCreateForm_Click"/>
                                            </Grid>

                                            <!-- Projects ItemsControl -->
                                            <ScrollViewer x:Name="ProjectListScroll" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                                <ItemsControl x:Name="ItemsProjectList">
