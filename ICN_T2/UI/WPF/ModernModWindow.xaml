<Window x:Class="ICN_T2.UI.WPF.ModernModWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:views="clr-namespace:ICN_T2.UI.WPF.Views"
        Title="Nexus Mod Studio - Puni Edition" Height="675" Width="1200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/PuniPuniTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 1. Puni Gold Title Style -->
            <Style x:Key="PuniGoldTitle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="G마켓 산스 TTF Bold, ONE Mobile POP, Malgun Gothic, Segoe UI"/>
                <Setter Property="FontSize" Value="48"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <!-- Enhanced Layered Shadow: Depth (6px) + Edge (1px simulated) -->
                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.7"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground">
                    <Setter.Value>
                        <!-- Requested Horizontal Gradient: #E7ECF3 -> #EFDAE3 -->
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Color="#E7ECF3" Offset="0"/>
                            <GradientStop Color="#EFDAE3" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 2. Puni Nav Button Style (Narrow & Grouped) -->
            <Style x:Key="PuniNavButton" TargetType="RadioButton">
                <Setter Property="Background" Value="#08FFD700"/>
                <!-- Subtle Yellow Tint -->
                <Setter Property="BorderBrush" Value="#15FFFFFF"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Height" Value="54"/>
                <!-- Slightly Shorter -->
                <Setter Property="Padding" Value="10,0"/>
                <!-- Narrower Padding -->
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Setter Property="Foreground" Value="#1A1C1E"/>
                <Setter Property="FontFamily" Value="G마켓 산스 TTF Bold, ONE Mobile POP, Malgun Gothic"/>
                <Setter Property="FontSize" Value="16"/>
                <!-- Slightly Smaller font for narrow feel -->
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <ControlTemplate.Resources>
                                <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource PuniYellow}"/>
                                <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource PuniGold}"/>
                                <LinearGradientBrush x:Key="SelectedBgBrush" StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#50FFD700" Offset="0"/>
                                    <GradientStop Color="#15FFD700" Offset="1"/>
                                </LinearGradientBrush>
                            </ControlTemplate.Resources>
                            <Grid>
                                <Border x:Name="border" 
                                        CornerRadius="12" 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}"
                                        RenderTransformOrigin="0.5,0.5">
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                                    </Border.RenderTransform>

                                    <ContentPresenter x:Name="content" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- Hover State -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#15FFD700"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HoverBrush}"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#FFFFD700" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <!-- Selected State (Checked) -->
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource SelectedBgBrush}"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HoverBrush}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="1.2"/>
                                    <Setter Property="Foreground" Value="#19232D"/>
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <!-- Pressed State -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 2.2. Modding Tool Button Style (Bag + Icon A/B) -->
            <Style x:Key="IconMenuButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- 1. Glass backplate (effect target; keeps icon/text crisp) -->
                                <Ellipse x:Name="MedalBackplate"
                                         Stretch="Fill"
                                         Fill="#24FFFFFF"
                                         Margin="6"
                                         IsHitTestVisible="False"/>

                                <!-- 2. Bag Background (Circle slot) -->
                                <Image Source="{Binding BagIconPath}" Stretch="Uniform"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       SnapsToDevicePixels="True"/>

                                <!-- 3. Icon A (Normal) - 원본이 icon_b보다 2배 크므로 50% 크기로 -->
                                <Image x:Name="IconA" Source="{Binding IconAPath}" Stretch="Uniform"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="20" Opacity="1"/>

                                <!-- 4. Icon B (Hover) - Initially hidden -->
                                <Image x:Name="IconB" Source="{Binding IconBPath}" Stretch="Uniform"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="8" Opacity="0"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       SnapsToDevicePixels="True"/>

                                <!-- 5. Text Overlay - Position at bottom -->
                                <TextBlock Text="{Binding Title}"
                                           HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                           TextAlignment="Center"
                                           FontFamily="G마켓 산스 TTF bold, Malgun Gothic" FontWeight="Bold" FontSize="12"
                                           Margin="0,0,0,8"
                                           LineHeight="14"
                                           TextOptions.TextFormattingMode="Display"
                                           TextOptions.TextRenderingMode="ClearType"
                                           TextOptions.TextHintingMode="Fixed"
                                           SnapsToDevicePixels="True"
                                           UseLayoutRounding="True">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="WhiteSmoke"/>
                                    </TextBlock.Foreground>
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="1" ShadowDepth="1" Opacity="1"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="IconA" Property="Opacity" Value="0"/>
                                    <Setter TargetName="IconB" Property="Opacity" Value="1"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- 2.1. Puni Icon Button Style (For standard buttons like Back) -->
            <Style x:Key="PuniIconButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#08FFD700"/>
                <Setter Property="BorderBrush" Value="#15FFFFFF"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Height" Value="54"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <ControlTemplate.Resources>
                                <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource PuniYellow}"/>
                            </ControlTemplate.Resources>
                            <Grid>
                                <Border x:Name="border" 
                                        CornerRadius="12" 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}"
                                        RenderTransformOrigin="0.5,0.5">
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#15FFD700"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HoverBrush}"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#FFFFD700" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 3. Puni Primary Action Button Style -->
            <Style x:Key="PuniButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource PuniYellowBrush}"/>
                <Setter Property="Foreground" Value="#1A1C1E"/>
                <Setter Property="FontFamily" Value="G마켓 산스 TTF Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="25,12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="15" 
                                    Padding="{TemplateBinding Padding}"
                                    SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FFD700" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource PuniGoldBrush}"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#FFB800" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 4. Puni Cancel/Secondary Button Style -->
            <Style x:Key="PuniCancelButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#666"/>
                <Setter Property="FontFamily" Value="G마켓 산스 TTF Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="25,12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="#30000000" 
                                    BorderThickness="1" 
                                    CornerRadius="15" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#10000000"/>
                                    <Setter Property="Foreground" Value="#333"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Main Container -->
    <Border CornerRadius="20" BorderThickness="0" BorderBrush="Transparent" ClipToBounds="False">
        <Grid>
            <!-- 0. Void Background (콘텐츠가 줄어들 때 드러나는 검정 배경) -->
            <Border x:Name="VoidBackground" Background="#FF1E1E1E" CornerRadius="20"/>

            <!-- Squeeze Container (Pull-back 시 이 컨테이너의 ScaleX만 줄임) -->
            <Border x:Name="SqueezeContainer" CornerRadius="20" ClipToBounds="False" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform x:Name="SqueezeScale" ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>
                <Grid>
                    <!-- A. Background Layer -->
                    <!-- User's "Emotional" Puni Background -->
                    <Border Name="BackgroundContainer" CornerRadius="20" RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Border.RenderTransform>
                        <Border.Background>
                            <ImageBrush ImageSource="pack://application:,,,/ICN_T2;component/Resources/MenuBG/pz_bg_e159_01.png" Stretch="UniformToFill"
                                RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border.Background>
                    </Border>

                    <!-- B. Main App Content (Initially Hidden) -->
                    <!-- Increased size: Margin 100->50 -->
                    <!-- MainContentPanel 보이기 d:Visibility="Visible"  숨기기 d:Visibility="Collapsed" -->
                    <Border x:Name="MainContentPanel"
                        Visibility="Hidden"
                        d:Visibility="Visible"
                        Opacity="0"
                        d:Opacity="1"
                        Margin="30,30,30,30"
                        d:Margin="30,30,30,30"
                        ClipToBounds="False"
                        CornerRadius="40"
                        Background="Transparent"
                        RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="ContentScale" ScaleX="1" ScaleY="1"/>
                                <TranslateTransform x:Name="ContentSlide" X="0" Y="0"/>
                            </TransformGroup>
                        </Border.RenderTransform>
                        <Grid>
                            <!-- New wrapper to separate background from content margin -->
                            <!-- Background Layers (Full Span) -->
                            <Border x:Name="MainContentRefractionLayer"
                                CornerRadius="40"
                                IsHitTestVisible="False"
                                Visibility="Collapsed"
                                Opacity="0"
                                ClipToBounds="True">
                                <Border.Background>
                                    <VisualBrush Visual="{Binding ElementName=BackgroundContainer}" Stretch="Fill"/>
                                </Border.Background>
                            </Border>

                            <!-- 어두운 회색 틴트 레이어 (왜곡 적용됨) -->
                            <Border x:Name="MainContentTintLayer"
                                Background="Transparent"
                                CornerRadius="40"
                                Visibility="Visible"
                                Opacity="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                IsHitTestVisible="False"/>

                            <Border x:Name="MainContentDarkBlurOverlay"
                                Background="Transparent"
                                CornerRadius="40"
                                Visibility="Visible"
                                Opacity="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                IsHitTestVisible="False"
                                Tag="FixedBackdropGlass"/>

                            <Border x:Name="SteppedBackgroundBorder"
                                Background="Transparent"
                                BorderThickness="0"
                                CornerRadius="40"
                                ClipToBounds="True">

                                <!-- Geometry Path -->
                                <Path x:Name="SteppedBackgroundPath"
                                  Fill="Transparent"
                                  StrokeThickness="0"
                                  StrokeLineJoin="Round"/>
                            </Border>

                            <!-- Inset edge to keep a soft inner boundary without thick outer border -->
                            <Border x:Name="MainContentInsetEdgeLayer"
                                Margin="2"
                                CornerRadius="38"
                                BorderBrush="#22FFFFFF"
                                BorderThickness="1"
                                Opacity="0.85"
                                IsHitTestVisible="False"
                                Visibility="Collapsed"/>

                            <Grid x:Name="MainContentRootGrid" Margin="10" Panel.ZIndex="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- Title Row -->
                                    <RowDefinition Height="*"/>
                                    <!-- Content Row -->
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <!-- Sidebar Area (approx 240) -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- Right Content Area (오른쪽 창) -->
                                </Grid.ColumnDefinitions>


                                <!-- 1. Header Text -->
                                <TextBlock x:Name="TxtMainHeader"
                               Text="메인메뉴"
                               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                               Margin="10,0,0,30"
                               Opacity="0"
                               Style="{StaticResource PuniGoldTitle}"
                               RenderTransformOrigin="0.5,0.5"
                               HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform X="-150"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>

                                <!-- 2. Split Layout (The left side stays in Row 1, Col 0. The right side contents move to Row 1, Col 1) -->
                                <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Sidebar -->
                                        <ColumnDefinition x:Name="SidebarSpacerCol" Width="20"/>
                                        <!-- Spacer -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Right Content Interaction Layer -->
                                    </Grid.ColumnDefinitions>

                                    <!-- Left Sidebar -->
                                    <Border x:Name="LeftSidebarBorder" Grid.Column="0" Width="220" Background="#26DFF6FF" CornerRadius="20" Padding="12" Height="Auto" VerticalAlignment="Top"
                                BorderBrush="#64EAFBFF" BorderThickness="1">
                                        <Grid>
                                            <!-- Initial Project Menu Buttons -->
                                            <StackPanel x:Name="ProjectMenuButtons">
                                                <!-- Button 1: Project Menu -->
                                                <RadioButton Style="{StaticResource PuniNavButton}" GroupName="MainNavGroup" IsChecked="True" Checked="NavProject_Checked">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Project.png" Width="20" Height="20" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,8,0"/>
                                                        <TextBlock Text="프로젝트 메뉴" 
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    FontWeight="Normal"/>
                                                    </StackPanel>
                                                </RadioButton>

                                                <!-- Button 2: Tools -->
                                                <RadioButton Style="{StaticResource PuniNavButton}" GroupName="MainNavGroup" Checked="NavMainTool_Checked">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Tool.png" Width="20" Height="20" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,8,0"/>
                                                        <TextBlock Text="도 구" VerticalAlignment="Center" FontSize="20" FontWeight="Normal"/>
                                                    </StackPanel>
                                                </RadioButton>

                                                <!-- Button 3: Settings -->
                                                <RadioButton Style="{StaticResource PuniNavButton}" GroupName="MainNavGroup" Checked="NavOption_Checked">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Option.png" Width="20" Height="20" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,8,0"/>
                                                        <TextBlock Text="설 정" VerticalAlignment="Center" FontSize="20" FontWeight="Normal"/>
                                                    </StackPanel>
                                                </RadioButton>

                                                <!-- Extra: CherryMan Icon with Floating Animation -->
                                                <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/CherryMan.png" 
                                       Height="120" Margin="0,20,0,0"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       RenderTransformOrigin="0.5,0.5">
                                                    <Image.RenderTransform>
                                                        <TranslateTransform x:Name="MascotTranslate"/>
                                                    </Image.RenderTransform>
                                                    <Image.Triggers>
                                                        <EventTrigger RoutedEvent="Image.Loaded">
                                                            <BeginStoryboard>
                                                                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                                    <DoubleAnimation Storyboard.TargetName="MascotTranslate" 
                                                                     Storyboard.TargetProperty="Y" 
                                                                     From="0" To="-10" Duration="0:0:2">
                                                                        <DoubleAnimation.EasingFunction>
                                                                            <SineEase EasingMode="EaseInOut"/>
                                                                        </DoubleAnimation.EasingFunction>
                                                                    </DoubleAnimation>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                    </Image.Triggers>
                                                </Image>
                                            </StackPanel>

                                            <!-- Modding Menu Buttons (Hidden by default) -->
                                            <StackPanel x:Name="ModdingMenuButtons" Visibility="Collapsed" Opacity="0">
                                                <!-- Back Button -->
                                                <Button x:Name="BtnBackOnly" Style="{StaticResource PuniIconButtonStyle}" Margin="0,0,0,10" Click="BtnBackToMainMenu_Click" ToolTip="뒤로가기">
                                                    <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Back.png" Width="24" Height="24"/>
                                                </Button>

                                                <!-- Sidebar Separator & Tool Buttons (Initially Hidden) -->
                                                <StackPanel x:Name="ToolSidebarButtons" Visibility="Collapsed">
                                                    <!-- Separator Line -->
                                                    <Border Height="1" Background="#40000000" Margin="10,0,10,15"/>

                                                    <!-- 3 Example Bag Icon Buttons -->
                                                    <Button Style="{StaticResource PuniIconButtonStyle}" Margin="0,0,0,15" ToolTip="예시 도구 1">
                                                        <Image Source="pack://application:,,,/ICN_T2;component/Resources/Tribe/icon_b1.png" Width="32" Height="32"/>
                                                    </Button>
                                                    <Button Style="{StaticResource PuniIconButtonStyle}" Margin="0,0,0,15" ToolTip="예시 도구 2">
                                                        <Image Source="pack://application:,,,/ICN_T2;component/Resources/Tribe/icon_b2.png" Width="32" Height="32"/>
                                                    </Button>
                                                    <Button Style="{StaticResource PuniIconButtonStyle}" Margin="0,0,0,15" ToolTip="예시 도구 3">
                                                        <Image Source="pack://application:,,,/ICN_T2;component/Resources/Tribe/icon_b3.png" Width="32" Height="32"/>
                                                    </Button>
                                                </StackPanel>

                                                <RadioButton x:Name="NavProject" Style="{StaticResource PuniNavButton}" GroupName="ModNavGroup" IsChecked="True" Checked="NavProject_Checked">
                                                    <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Project.png" Width="24" Height="24" Margin="0,5"/>
                                                </RadioButton>
                                                <RadioButton x:Name="NavTool" Style="{StaticResource PuniNavButton}" GroupName="ModNavGroup" Checked="NavTool_Checked">
                                                    <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Tool.png" Width="24" Height="24" Margin="0,5"/>
                                                </RadioButton>
                                                <RadioButton x:Name="NavOption" Style="{StaticResource PuniNavButton}" GroupName="ModNavGroup" Checked="NavOption_Checked">
                                                    <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Option.png" Width="24" Height="24" Margin="0,5"/>
                                                </RadioButton>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Right Content Area (Interaction Layer) -->
                                    <!-- 오른쪽 창-->
                                    <Grid x:Name="RightContentArea" Grid.Column="2" Margin="0,0,6,8">
                                        <Grid x:Name="ProjectMenuContent">
                                            <!-- 1. Project List View -->
                                            <Grid x:Name="ProjectListView" Margin="25" VerticalAlignment="Top">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                                    <TextBlock Text="보유한 프로젝트" FontSize="24" FontFamily="G마켓 산스 TTF Bold" Foreground="#1A1C1E" VerticalAlignment="Top"/>
                                                    <Button x:Name="BtnShowCreateForm" Content="+ NEW" HorizontalAlignment="Right"
                                                Style="{StaticResource PuniButtonStyle}" Click="BtnShowCreateForm_Click" Margin="0,-10,10,10"/>
                                                </Grid>

                                                <!-- Projects ItemsControl -->
                                                <ScrollViewer x:Name="ProjectListScroll" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                                    <ItemsControl x:Name="ItemsProjectList">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Margin="0,0,0,12" Padding="15" CornerRadius="15" Background="#30FFFFFF" BorderBrush="#15000000" BorderThickness="1">
                                                                    <Grid>
                                                                        <StackPanel>
                                                                            <TextBlock Text="{Binding Name}" FontSize="19" FontFamily="G마켓 산스 TTF Bold" Foreground="#1A1C1E"/>
                                                                            <TextBlock Text="{Binding Description}" FontSize="13" FontFamily="G마켓 산스 TTF Bold" Foreground="#777" Margin="0,5,0,0" TextWrapping="Wrap" MaxHeight="40" TextTrimming="CharacterEllipsis" Opacity="0.9"/>
                                                                            <TextBlock Text="{Binding RootPath}" FontSize="11" FontFamily="G마켓 산스 TTF Bold" Foreground="#AAAAAA" Margin="0,8,0,0"/>
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                                            <Button Content="열기" Padding="12,5" Margin="0,0,10,0" Tag="{Binding RootPath}" Click="BtnOpenProject_Click"/>
                                                                            <Button Content="삭제" Padding="12,5" Foreground="Crimson" Tag="{Binding RootPath}" Click="BtnDeleteProject_Click"/>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </ScrollViewer>

                                                <StackPanel x:Name="EmptyStatePanel" Grid.Row="1" Visibility="Collapsed"
                                                VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/Waring.png"
                                               Width="780" Height="180" Stretch="Uniform"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                                    <TextBlock Text="현재 생성된 프로젝트 폴더가 없습니다"
                                                   FontSize="16" FontFamily="G마켓 산스 TTF Bold"
                                                   Foreground="#888" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- 2. Create Project Form (Hidden by default) -->
                                            <Grid x:Name="CreateProjectForm" Margin="30" Visibility="Collapsed">
                                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                    <StackPanel>
                                                        <TextBlock Text="새 프로젝트 생성" FontSize="26" FontFamily="G마켓 산스 TTF Bold" Foreground="#1A1C1E" Margin="0,0,0,25"/>

                                                        <TextBlock Text="프로젝트 이름" FontSize="16" FontFamily="G마켓 산스 TTF Bold" Foreground="#1A1C1E" Margin="0,0,0,5"/>
                                                        <Border CornerRadius="10" Background="#20FFFFFF" BorderBrush="#30000000" BorderThickness="1" Margin="0,0,0,20">
                                                            <TextBox x:Name="TxtProjName" Padding="12" Background="Transparent" BorderThickness="0"/>
                                                        </Border>

                                                        <!-- Base Game Type Selection -->
                                                        <TextBlock Text="베이스 게임 타입" FontSize="16" FontFamily="G마켓 산스 TTF Bold" Foreground="#1A1C1E" Margin="0,0,0,10"/>
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                                            <RadioButton x:Name="RbVanilla" x:FieldModifier="public" Content="바닐라 (샘플 데이터 사용)" IsChecked="True" Margin="0,0,20,0" FontFamily="G마켓 산스 TTF Bold"/>
                                                            <RadioButton x:Name="RbModded" x:FieldModifier="public" Content="모딩본 (경로 직접 지정)" FontFamily="G마켓 산스 TTF Bold"/>
                                                        </StackPanel>

                                                        <!-- Conditional Game Path Section -->
                                                        <StackPanel x:Name="GamePathSection">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ElementName=RbModded, Path=IsChecked}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="베이스 게임 경로" FontSize="16" FontFamily="G마켓 산스 TTF Bold" Foreground="#1A1C1E" Margin="0,0,0,5"/>
                                                            <Grid Margin="0,0,0,20">
                                                                <Border CornerRadius="10" Background="#20FFFFFF" BorderBrush="#30000000" BorderThickness="1">
                                                                    <TextBox x:Name="TxtGamePath" Padding="12" Background="Transparent" BorderThickness="0"/>
                                                                </Border>
                                                                <Button Content="..." Width="40" HorizontalAlignment="Right" BorderThickness="0" Background="Transparent" Click="BtnBrowseGame_Click" FontSize="18"/>
                                                            </Grid>
                                                        </StackPanel>

                                                        <!-- Description -->
                                                        <TextBlock Text="프로젝트 설명 (선택)" FontSize="16" FontFamily="G마켓 산스 TTF Bold" Foreground="#1A1C1E" Margin="0,0,0,5"/>
                                                        <Border CornerRadius="10" Background="#20FFFFFF" BorderBrush="#30000000" BorderThickness="1" Margin="0,0,0,25">
                                                            <TextBox x:Name="TxtProjDesc" Padding="12" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Background="Transparent" BorderThickness="0"/>
                                                        </Border>

                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                            <Button Content="취소" Style="{StaticResource PuniCancelButtonStyle}" Margin="0,0,12,0" Click="BtnCancelCreate_Click"/>
                                                            <Button Content="만들기" Style="{StaticResource PuniButtonStyle}" Click="BtnSaveProject_Click"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </ScrollViewer>
                                            </Grid>

                                            <!-- 3. Modding Menu View -->
                                            <ItemsControl x:Name="ModdingMenuContent" Visibility="Collapsed" d:Visibility="Visible" Opacity="0"
                                              RenderTransformOrigin="0,0.5"
                                              HorizontalAlignment="Left" VerticalAlignment="Top"
                                              Margin="30,32,0,0"
                                              Width="468" Height="377">
                                                <!-- Scaled 1.11x from 421x354 to fit better -->
                                                <ItemsControl.RenderTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform x:Name="ModMenuScale" ScaleX="1" ScaleY="1"/>
                                                        <SkewTransform x:Name="ModMenuSkew" AngleX="0" AngleY="0"/>
                                                        <TranslateTransform x:Name="ModMenuSlideTranslate" X="0" Y="0"/>
                                                        <TranslateTransform x:Name="ModMenuTranslate" X="0" Y="0"/>
                                                    </TransformGroup>
                                                </ItemsControl.RenderTransform>
                                                <ItemsControl.Template>
                                                    <ControlTemplate TargetType="ItemsControl">
                                                        <Grid>
                                                            <!-- Background Image (Book Page) -->
                                                            <Image x:Name="BookGlassBackplate" Source="pack://application:,,,/ICN_T2;component/Resources/MenuBG/MenuOpen2.png" 
                                                       Stretch="Fill" Width="468" Height="377">
                                                                <Image.Effect>
                                                                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.4"/>
                                                                </Image.Effect>
                                                            </Image>
                                                            <!-- Overlay for Text if needed -->
                                                            <ItemsPresenter/>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </ItemsControl.Template>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <Canvas Width="468" Height="377"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemContainerStyle>
                                                    <Style TargetType="ContentPresenter">
                                                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                                    </Style>
                                                </ItemsControl.ItemContainerStyle>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button Style="{StaticResource IconMenuButtonStyle}"
                                                    Width="{Binding Width}" Height="{Binding Height}"
                                                    Command="{Binding Command}"
                                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                                    ToolTip="{Binding Description}"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- 5. Character Info View (V3) -->
                                            <views:CharacterInfoV3 x:Name="CharacterInfoContent" 
                                                       DataContext="{x:Null}"
                                                       Visibility="Collapsed" Opacity="0"
                                                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                       Margin="6,4,6,8"/>

                                            <!-- 6. Character Scale View (New) -->
                                            <views:CharacterScaleView x:Name="CharacterScaleContent" 
                                                       DataContext="{x:Null}"
                                                       Visibility="Collapsed" Opacity="0"
                                                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                       Margin="6,4,6,8"/>

                                            <!-- 7. Yokai Stats View (New) -->
                                            <views:YokaiStatsView x:Name="YokaiStatsContent" 
                                                       DataContext="{x:Null}"
                                                       Visibility="Collapsed" Opacity="0"
                                                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                       Margin="6,4,6,8"/>

                                            <!-- 8. Encounter Editor (New) -->
                                            <views:EncounterView x:Name="EncounterEditorContent" 
                                                       DataContext="{x:Null}"
                                                       Visibility="Collapsed" Opacity="0"
                                                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                       Margin="6,4,6,8"/>

                                            <!-- Tool / Option placeholders -->
                                            <views:GlobalToolsView x:Name="ToolPlaceholderContent"
                                                                   Visibility="Collapsed"
                                                                   Margin="20"/>

                                            <Border x:Name="OptionPlaceholderContent" Visibility="Collapsed" Margin="20" Background="#10FFFFFF" CornerRadius="18" BorderBrush="#20FFFFFF" BorderThickness="1" Padding="20">
                                                <StackPanel>
                                                    <TextBlock Text="설정 메뉴 준비중" FontSize="20" FontWeight="Bold" Foreground="#1A1C1E" Margin="0,0,0,8"/>
                                                    <TextBlock Text="환경 설정 항목이 곧 추가됩니다." FontSize="14" Foreground="#394147"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Modding menu hover description -->
                                            <Border x:Name="ModdingDescriptionPanel" Visibility="Collapsed" Panel.ZIndex="10"
                                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                                    Margin="0,40,12,0" Width="320"
                                                    Background="#2CFFFFFF" BorderBrush="#30FFFFFF" BorderThickness="1" CornerRadius="12" Padding="12">
                                                <StackPanel>
                                                    <TextBlock x:Name="ModdingDescTitle" FontSize="20" FontWeight="Bold"
                                                               FontFamily="Gmarket Sans Bold, Malgun Gothic, 'Segoe UI'" Foreground="#111"/>
                                                    <TextBlock x:Name="ModdingDescBody" FontSize="16" Margin="0,6,0,0"
                                                               TextWrapping="Wrap" Foreground="#333"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- 4. Book Cover (For Animation) -->
                                            <Image x:Name="BookCover" Source="pack://application:,,,/ICN_T2;component/Resources/MenuBG/MenuOpen1.png"
                                       Visibility="Collapsed" Opacity="1"
                                       RenderTransformOrigin="0,0.5"
                                       HorizontalAlignment="Left" VerticalAlignment="Center"
                                       Margin="0,0,0,0"
                                       Width="468" Height="377" Stretch="Fill">
                                                <Image.RenderTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform x:Name="CoverScale" ScaleX="1.05" ScaleY="1.05"/>
                                                        <SkewTransform x:Name="CoverSkew" AngleY="0"/>
                                                        <TranslateTransform x:Name="CoverTranslate" X="0"/>
                                                    </TransformGroup>
                                                </Image.RenderTransform>
                                                <Image.Effect>
                                                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.4"/>
                                                </Image.Effect>
                                            </Image>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Save Selection Overlay -->
                    <Grid x:Name="SaveSelectionOverlay"
                          Visibility="Collapsed"
                          IsHitTestVisible="False"
                          Panel.ZIndex="190">
                        <Border Background="#B0000000"/>
                        <Border Width="760"
                                MaxHeight="540"
                                Padding="22"
                                CornerRadius="18"
                                Background="#F3F7FB"
                                BorderBrush="#40000000"
                                BorderThickness="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="저장"
                                                   FontFamily="G留덉폆 ?곗뒪 TTF Bold, ONE Mobile POP, Malgun Gothic"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="#1A1C1E"/>
                                        <TextBlock x:Name="SaveOverlaySummaryText"
                                                   Margin="0,4,0,0"
                                                   Foreground="#4A4F57"
                                                   FontSize="13"
                                                   Text="변경된 항목이 없습니다."/>
                                    </StackPanel>
                                    <Button Grid.Column="1"
                                            Content="닫기"
                                            MinWidth="78"
                                            Padding="12,6"
                                            Margin="14,0,0,0"
                                            Style="{StaticResource PuniCancelButtonStyle}"
                                            Click="SaveOverlayCloseButton_Click"/>
                                </Grid>

                                <TextBlock x:Name="SaveOverlayStatusText"
                                           Grid.Row="1"
                                           Margin="0,12,0,10"
                                           TextWrapping="Wrap"
                                           Foreground="#2E3440"
                                           FontSize="13"/>

                                <Border Grid.Row="2"
                                        CornerRadius="12"
                                        Background="#ECF2F8"
                                        BorderBrush="#32000000"
                                        BorderThickness="1">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Disabled"
                                                  Padding="10">
                                        <ItemsControl x:Name="SaveOverlayItemsControl">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="0,0,0,8"
                                                            Padding="10,8"
                                                            CornerRadius="10"
                                                            Background="#F9FBFD"
                                                            BorderBrush="#1F000000"
                                                            BorderThickness="1">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                                      VerticalAlignment="Top"
                                                                      Margin="0,2,10,0"/>
                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock FontWeight="SemiBold"
                                                                           Foreground="#1A1C1E"
                                                                           Text="{Binding DisplayName}"/>
                                                                <TextBlock Margin="0,2,0,0"
                                                                           Foreground="#5B6270"
                                                                           FontSize="12"
                                                                           Text="{Binding ToolDisplayName}"/>
                                                                <TextBlock Margin="0,2,0,0"
                                                                           Foreground="#4A4F57"
                                                                           FontSize="12"
                                                                           Text="{Binding Description}"
                                                                           TextWrapping="Wrap"/>
                                                                <TextBlock Margin="0,4,0,0"
                                                                           Foreground="#C62828"
                                                                           FontSize="12"
                                                                           Text="{Binding ErrorMessage}">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding ErrorMessage}" Value="{x:Null}">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>

                                <StackPanel Grid.Row="3"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="0,14,0,0">
                                    <Button x:Name="SaveOverlaySaveSelectedButton"
                                            Content="선택 저장"
                                            MinWidth="108"
                                            Margin="0,0,10,0"
                                            Style="{StaticResource PuniButtonStyle}"
                                            Click="SaveOverlaySaveSelectedButton_Click"/>
                                    <Button x:Name="SaveOverlaySaveAllButton"
                                            Content="저장"
                                            MinWidth="108"
                                            Style="{StaticResource PuniButtonStyle}"
                                            Click="SaveOverlaySaveAllButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- C. Title Screen Overlay -->
                    <Grid x:Name="TitleOverlay"
                          Background="Transparent"
                          Visibility="Visible"
                          d:Visibility="Collapsed"
                          IsHitTestVisible="True"
                          d:IsHitTestVisible="False"
                          MouseLeftButtonDown="TitleOverlay_Click"
                          RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="TitleScale" ScaleX="1" ScaleY="1"/>
                        </Grid.RenderTransform>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Logo with Fade In -->
                            <!-- Increased size by another 10%: 720->792, 300->330 -->
                            <!-- HighQuality scaling -->
                            <Image Source="pack://application:,,,/ICN_T2;component/Resources/UI%20icon/YwModEditorLOGO_.png" 
                           Width="792" Height="330" Stretch="Uniform" Opacity="0"
                           RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Triggers>
                                    <EventTrigger RoutedEvent="Image.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Image.Triggers>
                            </Image>

                            <!-- Blinking Text -->
                            <!-- Color: Porsche Crayon/Chalk ~ #E6E6E6 (Light Grey) -->
                            <!-- Font: ONE Mobile POP -->
                            <TextBlock Text="아무곳이나 터치하면 시작합니다" 
                               FontFamily="ONE Mobile POP, Malgun Gothic, Segoe UI" 
                               FontSize="29" FontWeight="Bold" 
                               Foreground="#E6E6E6"
                               HorizontalAlignment="Center" Margin="0,60,0,0" Opacity="1">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                                </TextBlock.Effect>
                                <TextBlock.Triggers>
                                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.2" Duration="0:0:0.8"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </TextBlock.Triggers>
                            </TextBlock>
                        </StackPanel>

                        <!-- Version Text -->
                        <TextBlock Text="v.2.2.1" 
                           FontFamily="ONE Mobile POP, Malgun Gothic, Segoe UI"
                           FontSize="18" Foreground="#80FFFFFF"
                           HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                           Margin="20" IsHitTestVisible="False"/>
                    </Grid>

                    <!-- [ANIMATION PROXY] Floating Icon Layer (Moved for Z-Order: Behind TitleBar) -->
                    <Grid x:Name="TransitionProxy" Visibility="Collapsed" HorizontalAlignment="Left" VerticalAlignment="Top" IsHitTestVisible="False">
                        <Grid x:Name="ProxyIconContainer">
                            <!-- 1. Medal Shadow/Outer Frame -->
                            <Ellipse Fill="#30000000" Margin="-5">
                                <Ellipse.Effect>
                                    <BlurEffect Radius="10"/>
                                </Ellipse.Effect>
                            </Ellipse>

                            <!-- 2. Medal Base (Bag Background) -->
                            <Border x:Name="ProxyMedalFrame" CornerRadius="100" BorderBrush="#FFD700" BorderThickness="0" ClipToBounds="True">
                                <Grid>
                                    <Image x:Name="ProxyBag" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- 3. Icon (IconB-style) -->
                                    <Image x:Name="ProxyIcon" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15"/>
                                </Grid>
                            </Border>

                            <!-- 4. Gloss Overlay for Medal Feel -->
                            <Ellipse IsHitTestVisible="False" Margin="2">
                                <Ellipse.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#80FFFFFF" Offset="0"/>
                                        <GradientStop Color="#20FFFFFF" Offset="0.3"/>
                                        <GradientStop Color="Transparent" Offset="0.6"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- 5. Text Label (Always Visible) -->
                            <TextBlock x:Name="ProxyText" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                TextAlignment="Center"
                                FontFamily="G마켓 산스 TTF bold, Malgun Gothic" FontWeight="Bold" FontSize="11"
                                Margin="0,0,0,10"
                                Foreground="WhiteSmoke">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="1"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>
                    </Grid>

                    <!-- D. Global Custom Draggable Title Bar (Always Visible, Top Z-Index) -->
                    <Border x:Name="GlobalTitleBar" VerticalAlignment="Top" Height="30" Background="#99404040" CornerRadius="20,20,0,0" MouseLeftButtonDown="TitleBar_MouseDown" Cursor="SizeAll" Visibility="Collapsed" Opacity="0" IsHitTestVisible="False">
                        <Border.RenderTransform>
                            <TranslateTransform x:Name="GlobalTitleBarTranslate" Y="-38"/>
                        </Border.RenderTransform>
                        <Grid>
                            <!-- Title Text (Centered) -->
                            <TextBlock Text="ICN_T2 v.2.2.1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                FontSize="12" Foreground="#EEE" FontWeight="SemiBold" IsHitTestVisible="False">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="2" Opacity="0.5"/>
                                </TextBlock.Effect>
                            </TextBlock>

                            <!-- Window Controls (Right Aligned) -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                                <!-- Minimize Button -->
                                <Button x:Name="BtnMinimize" Content="―" Width="30" Height="30" 
                                Background="Transparent" BorderThickness="0" Foreground="#CCC" 
                                FontSize="14" FontWeight="Bold" Click="BtnMinimize_Click" Cursor="Hand"
                                VerticalContentAlignment="Center" Margin="0,0,5,0">
                                    <Button.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="2" Opacity="0.3"/>
                                    </Button.Effect>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Close Button -->
                                <Button x:Name="BtnClose" Content="✕" Width="30" Height="30" 
                                Background="Transparent" BorderThickness="0" Foreground="#CCC" 
                                FontSize="14" FontWeight="Bold" Click="BtnClose_Click" Cursor="Hand"
                                VerticalContentAlignment="Center">
                                    <Button.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="2" Opacity="0.3"/>
                                    </Button.Effect>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Foreground" Value="#FF5555"/>
                                                                <!-- Red on hover -->
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>


                        </Grid>
                    </Border>

                    <!-- E. White Flash Overlay (중앙에서 빛이 퍼지는 RadialGradient) -->


                    <!-- E. White Flash Overlay (Solid White for Full Screen Flash) -->
                    <Border x:Name="FlashOverlay"
        Opacity="0"
        Visibility="Visible"
        d:Visibility="Collapsed"
        IsHitTestVisible="False"
        CornerRadius="20"
        Background="White"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
