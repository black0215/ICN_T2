<UserControl x:Class="ICN_T2.UI.WPF.Views.EncounterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:ICN_T2.UI.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1100"
             ClipToBounds="False"
             Background="Transparent"
             TextElement.Foreground="#1F1F1F">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/PuniPuniTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <conv:NullToVisibilityConverter x:Key="NullToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="RootGrid"
          SnapsToDevicePixels="True"
          UseLayoutRounding="True"
          ClipToBounds="False"
          TextOptions.TextFormattingMode="Display"
          TextOptions.TextRenderingMode="ClearType"
          TextOptions.TextHintingMode="Fixed">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,90,0,30">
            <Border CornerRadius="24"
                    Tag="ToolPanelBackdropGlass"
                    IsHitTestVisible="False"/>
            <Border Background="#33FFFFFF"
                    BorderBrush="#22FFFFFF"
                    BorderThickness="1"
                    CornerRadius="24"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Encounter"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#1F1F1F"
                               Margin="0,0,0,16"/>

                    <ComboBox Grid.Row="1"
                              ItemsSource="{Binding Maps}"
                              SelectedValue="{Binding SelectedMap, Mode=TwoWay}"
                              SelectedValuePath="Path"
                              DisplayMemberPath="DisplayName"
                              TextSearch.TextPath="DisplayName"
                              Style="{StaticResource IosFilterComboBoxStyle}"
                              Margin="0,0,0,12"/>

                    <Border Grid.Row="2"
                            Margin="0,0,0,12"
                            Height="44"
                            Style="{StaticResource IosSearchFieldStyle}">
                        <Grid>
                            <TextBlock Text="Filter tables..."
                                       FontSize="14"
                                       Foreground="#601F1F1F"
                                       Margin="14,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=TxtTableSearch}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBox x:Name="TxtTableSearch"
                                     Padding="14,0"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Text="{Binding TableSearchText, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Foreground="#1F1F1F"/>
                        </Grid>
                    </Border>

                    <ListBox Grid.Row="3"
                             ItemsSource="{Binding FilteredTableEntries}"
                             SelectedItem="{Binding SelectedTableEntry, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             VirtualizingPanel.ScrollUnit="Pixel"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource IosListItemStyle}">
                                <Setter Property="Foreground" Value="#1F1F1F"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="13"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Column="2"
              Margin="0,-5,0,10"
              ClipToBounds="False"
              Visibility="{Binding SelectedTableEntry, Converter={StaticResource NullToVisibility}}">
            <Border CornerRadius="28"
                    Tag="ToolPanelBackdropGlass"
                    IsHitTestVisible="False"/>
            <Border Background="#33FFFFFF"
                    BorderBrush="#22FFFFFF"
                    BorderThickness="1"
                    CornerRadius="28"
                    Padding="14">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0">
                    <StackPanel>
                        <Border Background="#40FFFFFF"
                                BorderBrush="#15FFFFFF"
                                BorderThickness="1"
                                CornerRadius="24"
                                Padding="14"
                                Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedMapDisplayName}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#1F1F1F"
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding SelectedTableEntry.DisplayName}"
                                           FontSize="12"
                                           Opacity="0.68"
                                           FontFamily="Consolas"/>
                            </StackPanel>
                        </Border>

                        <ItemsControl ItemsSource="{Binding SlotCards}"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#40FFFFFF"
                                            BorderBrush="#15FFFFFF"
                                            BorderThickness="1"
                                            CornerRadius="18"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="90"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                                <TextBlock Text="Yokai" FontSize="11" FontWeight="Bold" Opacity="0.58" Margin="0,0,0,6"/>
                                                <ComboBox ItemsSource="{Binding DataContext.YokaiNames, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                          SelectedValue="{Binding ParamHash, UpdateSourceTrigger=PropertyChanged}"
                                                          SelectedValuePath="ParamHash"
                                                          DisplayMemberPath="Name"
                                                          TextSearch.TextPath="Name"
                                                          Style="{StaticResource IosFilterComboBoxStyle}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                                <TextBlock Text="Level" FontSize="11" FontWeight="Bold" Opacity="0.58" Margin="0,0,0,6"/>
                                                <TextBox Text="{Binding Level, UpdateSourceTrigger=PropertyChanged}"
                                                         FontFamily="Consolas"
                                                         HorizontalContentAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="Weight" FontSize="11" FontWeight="Bold" Opacity="0.58" Margin="0,0,0,6"/>
                                                <TextBox Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}"
                                                         FontFamily="Consolas"
                                                         HorizontalContentAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
