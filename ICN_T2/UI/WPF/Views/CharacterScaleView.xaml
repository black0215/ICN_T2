<UserControl x:Class="ICN_T2.UI.WPF.Views.CharacterScaleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICN_T2.UI.WPF.Views"
             xmlns:vm="clr-namespace:ICN_T2.UI.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080"
             Foreground="White" FontFamily="Malgun Gothic">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/PuniPuniTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MaxWidth="400"/> <!-- Panel 0: Search List -->
            <ColumnDefinition Width="6"/> <!-- Spacing -->
            <ColumnDefinition Width="*"/> <!-- Right Area -->
        </Grid.ColumnDefinitions>

        <!-- Panel 0: Search List -->
        <Border Grid.Column="0"
                Background="#50FFFFFF"
                BorderBrush="#40FFFFFF"
                BorderThickness="1"
                CornerRadius="15"
                Padding="15">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="Auto"/> <!-- Search Box -->
                    <RowDefinition Height="*"/> <!-- List -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0" Text="캐릭터 비율 설정"
                           FontSize="18" FontWeight="Bold"
                           Foreground="White" Margin="0,0,0,12">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Search Box -->
                <Border Grid.Row="1"
                        Margin="0,0,0,10"
                        Background="#40FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        CornerRadius="8">
                    <Grid>
                        <TextBlock Text="검색 (이름, Hash)..."
                                   FontSize="12"
                                   Foreground="#80000000"
                                   Margin="10,6"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding ElementName=TxtSearch, Path=Text.Length, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted}"/>
                        <TextBox x:Name="TxtSearch"
                                 Padding="10,6"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="12"
                                 VerticalContentAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- List -->
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding FilteredList}"
                         SelectedItem="{Binding SelectedScale}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Padding" Value="8,5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#60FFD700"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#40FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Icon -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,8,0" VerticalAlignment="Center">
                                    <Image Source="{Binding RankIcon}" Width="18" Height="18" Margin="0,0,2,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <Image Source="{Binding TribeIcon}" Width="18" Height="18" RenderOptions.BitmapScalingMode="HighQuality"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding BaseHash, StringFormat='X8'}" FontSize="10" Opacity="0.7" FontFamily="Consolas"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Right Area: Detail -->
        <Border Grid.Column="2"
                Background="#50FFFFFF"
                BorderBrush="#40FFFFFF"
                BorderThickness="1"
                CornerRadius="15"
                Padding="20"
                Visibility="{Binding SelectedScale, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="*"/> <!-- Scrollable Content -->
                    <RowDefinition Height="Auto"/> <!-- Footer / Save Button -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <Border Width="80" Height="80"
                            Background="#50FFFFFF" BorderBrush="#40FFFFFF" BorderThickness="1"
                            CornerRadius="15" Padding="5" Margin="0,0,15,0">
                        <Image x:Name="ImgCharacterIcon" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedScale.Name}" FontSize="24" FontWeight="Bold" Margin="0,0,0,5">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <StackPanel Orientation="Horizontal">
                             <TextBlock Text="BaseHash: " FontSize="12" Opacity="0.7"/>
                             <TextBlock Text="{Binding SelectedScale.BaseHash, StringFormat='X8'}" FontSize="12" FontFamily="Consolas" Opacity="0.9"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                    <StackPanel>
                        <!-- Scale Items Helper -->
                        <StackPanel.Resources>
                            <Style TargetType="TextBlock" x:Key="LabelStyle">
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Margin" Value="0,0,0,5"/>
                                <Setter Property="Opacity" Value="0.9"/>
                            </Style>
                            <Style TargetType="TextBox" x:Key="InputStyle">
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Background" Value="#30000000"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="FontFamily" Value="Consolas"/>
                            </Style>
                            <Style TargetType="Border" x:Key="InputContainer">
                                <Setter Property="CornerRadius" Value="5"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="#40FFFFFF"/>
                                <Setter Property="Margin" Value="0,0,0,15"/>
                                <Setter Property="Padding" Value="1"/>
                            </Style>
                        </StackPanel.Resources>

                        <!-- Scale 1: Map -->
                        <TextBlock Text="World Map (Scale 1)" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox Text="{Binding SelectedScale.Scale1, UpdateSourceTrigger=PropertyChanged, StringFormat=F3}" Style="{StaticResource InputStyle}"/>
                        </Border>

                        <!-- Scale 2: Companion -->
                        <TextBlock Text="Companion (Scale 2)" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox Text="{Binding SelectedScale.Scale2, UpdateSourceTrigger=PropertyChanged, StringFormat=F3}" Style="{StaticResource InputStyle}"/>
                        </Border>

                        <!-- Scale 3: Ally Battle -->
                        <TextBlock Text="Ally Battle (Scale 3)" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox Text="{Binding SelectedScale.Scale3, UpdateSourceTrigger=PropertyChanged, StringFormat=F3}" Style="{StaticResource InputStyle}"/>
                        </Border>

                        <!-- Scale 4: Enemy Battle -->
                        <TextBlock Text="Enemy Battle (Scale 4)" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox Text="{Binding SelectedScale.Scale4, UpdateSourceTrigger=PropertyChanged, StringFormat=F3}" Style="{StaticResource InputStyle}"/>
                        </Border>

                        <!-- Scale 5: Menu -->
                        <TextBlock Text="Menu (Scale 5)" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox Text="{Binding SelectedScale.Scale5, UpdateSourceTrigger=PropertyChanged, StringFormat=F3}" Style="{StaticResource InputStyle}"/>
                        </Border>

                        <!-- Scale 6: Busters -->
                        <TextBlock Text="Busters (Scale 6)" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox Text="{Binding SelectedScale.Scale6, UpdateSourceTrigger=PropertyChanged, StringFormat=F3}" Style="{StaticResource InputStyle}"/>
                        </Border>

                        <!-- Scale 7: Extra -->
                        <TextBlock Text="Extra (Scale 7)" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox Text="{Binding SelectedScale.Scale7, UpdateSourceTrigger=PropertyChanged, StringFormat=F3}" Style="{StaticResource InputStyle}"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Save Button -->
                <Button Grid.Row="2"
                        Content="Save Changes"
                        Command="{Binding SaveChangesCommand}"
                        Height="40"
                        Margin="0,10,0,0"
                        Background="#804CAF50"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
