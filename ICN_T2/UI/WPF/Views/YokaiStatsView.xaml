<UserControl x:Class="ICN_T2.UI.WPF.Views.YokaiStatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICN_T2.UI.WPF.Views"
             xmlns:vm="clr-namespace:ICN_T2.UI.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080"
             Foreground="White" FontFamily="Malgun Gothic">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/PuniPuniTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MaxWidth="400"/> <!-- List Panel -->
            <ColumnDefinition Width="6"/> <!-- Spacing -->
            <ColumnDefinition Width="*"/> <!-- Detail Panel -->
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Search & List (iPhone Settings Style) -->
        <Border Grid.Column="0"
                Background="#50FFFFFF"
                BorderBrush="#40FFFFFF"
                BorderThickness="1"
                CornerRadius="15"
                Padding="15">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="Auto"/> <!-- Search -->
                    <RowDefinition Height="*"/> <!-- List -->
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="ìš”ê´´ ëŠ¥ë ¥ì¹˜"
                           FontSize="24" FontWeight="Bold"
                           Foreground="White" Margin="0,0,0,15">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Rounded Search Box -->
                <Border Grid.Row="1" Margin="0,0,0,15" Height="36"
                        Background="#30000000" CornerRadius="18"
                        BorderBrush="#40FFFFFF" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ”" FontFamily="Segoe UI Emoji" VerticalAlignment="Center" Margin="12,0,5,0" Opacity="0.7"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="White" FontSize="14"
                                 VerticalContentAlignment="Center"
                                 Padding="0,0,10,0"/>
                        <TextBlock Grid.Column="1" Text="Search" IsHitTestVisible="False"
                                   VerticalAlignment="Center" Foreground="#80FFFFFF"
                                   Visibility="{Binding SearchText, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted}"
                                   Margin="2,0,0,0"/>
                    </Grid>
                </Border>

                <!-- List -->
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding FilteredList}"
                         SelectedItem="{Binding SelectedStats}"
                         Background="Transparent" BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#60007AFF"/> <!-- iOS Blue-ish Selection -->
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#30FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Icon -->
                                <Image Grid.Column="0" Source="{Binding Icon}" Width="40" Height="40" Margin="0,0,12,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                                
                                <!-- Text Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="15" TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Orientation="Horizontal" Opacity="0.7">
                                        <Image Source="{Binding RankIcon}" Width="14" Height="14" Margin="0,0,4,0"/>
                                        <Image Source="{Binding TribeIcon}" Width="14" Height="14"/>
                                        <TextBlock Text="{Binding ParamHash, StringFormat='ID: {0:X8}'}" FontSize="11" Margin="8,0,0,0" FontFamily="Consolas" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Chevron -->
                                <TextBlock Grid.Column="2" Text="â€º" FontSize="18" Opacity="0.5" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Right Panel: Detail (Win11/iPhone Card Style) -->
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0"
                      Visibility="{Binding SelectedStats, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <!-- Card Style Helper -->
                <StackPanel.Resources>
                    <Style TargetType="Border" x:Key="CardStyle">
                        <Setter Property="Background" Value="#40FFFFFF"/>
                        <Setter Property="BorderBrush" Value="#30FFFFFF"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="CornerRadius" Value="12"/>
                        <Setter Property="Padding" Value="15"/>
                        <Setter Property="Margin" Value="0,0,0,15"/>
                    </Style>
                    <Style TargetType="TextBlock" x:Key="CardHeaderStyle">
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Margin" Value="0,0,0,10"/>
                        <Setter Property="Opacity" Value="0.9"/>
                    </Style>
                    <Style TargetType="TextBox" x:Key="InputStyle">
                        <Setter Property="Background" Value="#20000000"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontFamily" Value="Consolas"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>

                <!-- Detail Header -->
                <Border Background="#50FFFFFF" BorderBrush="#40FFFFFF" BorderThickness="1" CornerRadius="15" Padding="20" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Width="100" Height="100" CornerRadius="20" Background="#30000000" Margin="0,0,20,0">
                            <Image Source="{Binding SelectedStats.Icon}" Stretch="Uniform" Margin="10" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedStats.Name}" FontSize="32" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0" Opacity="0.8">
                                <TextBlock Text="BaseHash: "/>
                                <TextBlock Text="{Binding SelectedStats.BaseHash, StringFormat='X8'}" FontFamily="Consolas" FontWeight="Bold"/>
                                <TextBlock Text=" | ParamHash: " Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding SelectedStats.ParamHash, StringFormat='X8'}" FontFamily="Consolas" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Tabs (Segmented Control Visual) -->
                <Border Background="#30000000" CornerRadius="10" Padding="4" Margin="0,0,0,15" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Stats" Style="{StaticResource PuniTabButtonStyle}" IsChecked="True"/>
                        <RadioButton Content="Attributes" Style="{StaticResource PuniTabButtonStyle}" Checked="RadioButton_Checked"/>
                        <RadioButton Content="Drops" Style="{StaticResource PuniTabButtonStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Stats Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Base Stats (Min / Max)" Style="{StaticResource CardHeaderStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- HP -->
                            <Grid Grid.Column="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="HP" VerticalAlignment="Center" FontWeight="Bold"/>
                                <TextBox Grid.Column="1" Text="{Binding SelectedStats.MinHP}" Style="{StaticResource InputStyle}" Margin="0,0,4,0"/>
                                <TextBox Grid.Column="2" Text="{Binding SelectedStats.MaxHP}" Style="{StaticResource InputStyle}"/>
                            </Grid>

                            <!-- Strength -->
                            <Grid Grid.Column="1" Margin="0,0,0,8" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Strength" VerticalAlignment="Center" FontWeight="Bold"/>
                                <TextBox Grid.Column="1" Text="{Binding SelectedStats.MinStrength}" Style="{StaticResource InputStyle}" Margin="0,0,4,0"/>
                                <TextBox Grid.Column="2" Text="{Binding SelectedStats.MaxStrength}" Style="{StaticResource InputStyle}"/>
                            </Grid>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Spirit -->
                            <Grid Grid.Column="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Spirit" VerticalAlignment="Center" FontWeight="Bold"/>
                                <TextBox Grid.Column="1" Text="{Binding SelectedStats.MinSpirit}" Style="{StaticResource InputStyle}" Margin="0,0,4,0"/>
                                <TextBox Grid.Column="2" Text="{Binding SelectedStats.MaxSpirit}" Style="{StaticResource InputStyle}"/>
                            </Grid>

                            <!-- Defense -->
                            <Grid Grid.Column="1" Margin="0,0,0,8" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Defense" VerticalAlignment="Center" FontWeight="Bold"/>
                                <TextBox Grid.Column="1" Text="{Binding SelectedStats.MinDefense}" Style="{StaticResource InputStyle}" Margin="0,0,4,0"/>
                                <TextBox Grid.Column="2" Text="{Binding SelectedStats.MaxDefense}" Style="{StaticResource InputStyle}"/>
                            </Grid>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Speed -->
                            <Grid Grid.Column="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Speed" VerticalAlignment="Center" FontWeight="Bold"/>
                                <TextBox Grid.Column="1" Text="{Binding SelectedStats.MinSpeed}" Style="{StaticResource InputStyle}" Margin="0,0,4,0"/>
                                <TextBox Grid.Column="2" Text="{Binding SelectedStats.MaxSpeed}" Style="{StaticResource InputStyle}"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Attributes Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Elemental Resistance (Damage Multiplier)" Style="{StaticResource CardHeaderStyle}"/>
                        <UniformGrid Columns="2" Rows="3">
                            <DockPanel Margin="0,0,10,8">
                                <TextBlock Text="Fire" Width="60" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedStats.AttributeDamageFire, StringFormat=F2}" Style="{StaticResource InputStyle}"/>
                            </DockPanel>
                            <DockPanel Margin="0,0,0,8">
                                <TextBlock Text="Ice" Width="60" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedStats.AttributeDamageIce, StringFormat=F2}" Style="{StaticResource InputStyle}"/>
                            </DockPanel>
                            <DockPanel Margin="0,0,10,8">
                                <TextBlock Text="Earth" Width="60" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedStats.AttributeDamageEarth, StringFormat=F2}" Style="{StaticResource InputStyle}"/>
                            </DockPanel>
                            <DockPanel Margin="0,0,0,8">
                                <TextBlock Text="Lightning" Width="60" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedStats.AttributeDamageLigthning, StringFormat=F2}" Style="{StaticResource InputStyle}"/>
                            </DockPanel>
                            <DockPanel Margin="0,0,10,8">
                                <TextBlock Text="Water" Width="60" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedStats.AttributeDamageWater, StringFormat=F2}" Style="{StaticResource InputStyle}"/>
                            </DockPanel>
                            <DockPanel Margin="0,0,0,8">
                                <TextBlock Text="Wind" Width="60" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedStats.AttributeDamageWind, StringFormat=F2}" Style="{StaticResource InputStyle}"/>
                            </DockPanel>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <!-- Drops & Money Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Rewards &amp; Drops" Style="{StaticResource CardHeaderStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <DockPanel Grid.Column="0" Margin="0,0,0,8">
                                <TextBlock Text="Money" Width="80" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedStats.Money}" Style="{StaticResource InputStyle}"/>
                            </DockPanel>
                            <DockPanel Grid.Column="2" Margin="0,0,0,8">
                                <TextBlock Text="Exp" Width="80" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedStats.Experience}" Style="{StaticResource InputStyle}"/>
                            </DockPanel>
                        </Grid>
                        
                        <!-- Drop 1 -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Drop 1" VerticalAlignment="Center" Width="80"/>
                            <TextBox Grid.Column="1" Text="{Binding SelectedStats.Drop1Hash, StringFormat=X8}" Style="{StaticResource InputStyle}"/>
                            <TextBlock Grid.Column="3" Text="Rate" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Grid.Column="4" Text="{Binding SelectedStats.Drop1Rate}" Style="{StaticResource InputStyle}"/>
                        </Grid>

                        <!-- Drop 2 -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Drop 2" VerticalAlignment="Center" Width="80"/>
                            <TextBox Grid.Column="1" Text="{Binding SelectedStats.Drop2Hash, StringFormat=X8}" Style="{StaticResource InputStyle}"/>
                            <TextBlock Grid.Column="3" Text="Rate" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Grid.Column="4" Text="{Binding SelectedStats.Drop2Rate}" Style="{StaticResource InputStyle}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Save Button -->
                <Button Content="Save Changes"
                        Command="{Binding SaveChangesCommand}"
                        Height="45"
                        Margin="0,10,0,20"
                        Background="#804CAF50"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
