<UserControl x:Class="ICN_T2.UI.WPF.Views.CharacterInfoV3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="Transparent"
             TextElement.Foreground="#1F1F1F">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/PuniPuniTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- BoolToVisibilityConverter -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <!-- Custom ScrollBar Style -->
            <Style TargetType="{x:Type ScrollBar}">
                <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
                <Setter Property="Foreground" Value="#808080" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Width" Value="8" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid x:Name="GridRoot" Width="8" Background="{TemplateBinding Background}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.00001*" />
                                </Grid.RowDefinitions>
                                <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true" Focusable="false">
                                    <Track.Thumb>
                                        <Thumb x:Name="Thumb" Background="{TemplateBinding Foreground}" Style="{DynamicResource ScrollBarThumb}" />
                                    </Track.Thumb>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="false" />
                                    </Track.IncreaseRepeatButton>
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="false" />
                                    </Track.DecreaseRepeatButton>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Resources>
                    <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
                        <Setter Property="OverridesDefaultStyle" Value="true"/>
                        <Setter Property="IsTabStop" Value="false"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Thumb}">
                                    <Border x:Name="rectangle"
                                            Background="#808080"
                                            CornerRadius="4"
                                            Height="{TemplateBinding Height}"
                                            SnapsToDevicePixels="True"
                                            Width="{TemplateBinding Width}"/>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter TargetName="rectangle" Property="Background" Value="#A0808080" />
                                        </Trigger>
                                        <Trigger Property="IsDragging" Value="true">
                                            <Setter TargetName="rectangle" Property="Background" Value="#C0808080" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Style.Resources>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/> <!-- Panel 0: Search List (300/500) -->
            <ColumnDefinition Width="12"/> <!-- Compact Spacing -->
            <ColumnDefinition Width="*"/> <!-- Right Area -->
        </Grid.ColumnDefinitions>

        <!-- Panel 0: 검색 리스트 (높이 중간, 꺾임 X좌표 400 이내) -->
        <Border x:Name="PART_SearchPanel" Grid.Column="0" Width="300" MaxWidth="400"
                MaxHeight="320"
                Background="#B0FFFFFF"
                BorderBrush="#20000000"
                BorderThickness="1"
                CornerRadius="12"
                Padding="10"
                MouseEnter="SearchPanel_MouseEnter"
                MouseLeave="SearchPanel_MouseLeave">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- 헤더 + 필터 버튼 -->
                    <RowDefinition Height="Auto"/> <!-- 검색 박스 -->
                    <RowDefinition Height="*" MaxHeight="260"/> <!-- 리스트 -->
                </Grid.RowDefinitions>

                <!-- 헤더 + 필터 토글 버튼 -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="캐릭터 기본정보"
                               FontSize="16"
                               FontFamily="G마켓 산스 TTF Bold, Malgun Gothic"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <Button x:Name="BtnToggleFilter"
                            Content="필터"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Padding="10,4"
                            Background="#30FFFFFF"
                            BorderBrush="#50FFFFFF"
                            BorderThickness="1"
                            Cursor="Hand"
                            Click="BtnToggleFilter_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- 검색 박스 -->
                <Border Grid.Row="1"
                        Margin="0,0,0,10"
                        Background="#60FFFFFF"
                        BorderBrush="#20000000"
                        BorderThickness="1"
                        CornerRadius="8">
                    <Grid>
                        <TextBlock Text="검색..."
                                   FontSize="12"
                                   Foreground="#801F1F1F"
                                   Margin="10,6"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding ElementName=TxtSearch, Path=Text.Length, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <TextBox x:Name="TxtSearch"
                                 Padding="10,6"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="12"
                                 VerticalContentAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- 캐릭터 리스트 -->
                <ListBox x:Name="LstCharacters"
                         Grid.Row="2"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemsSource="{Binding FilteredList}"
                         SelectedItem="{Binding SelectedCharacter, Mode=TwoWay}"
                         VirtualizingStackPanel.IsVirtualizing="True"
                         VirtualizingStackPanel.VirtualizationMode="Recycling"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         PreviewMouseLeftButtonDown="ListBoxItem_PreviewMouseLeftButtonDown">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="border" 
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="Transparent"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#40FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#80FFFFFF"/> <!-- Windows 11 Selection Style -->
                                                <Setter TargetName="border" Property="BorderBrush" Value="#60000000"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{Binding Name, Mode=OneWay}"
                                           FontSize="12"
                                           FontFamily="G마켓 산스 TTF Bold, Malgun Gothic"
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"/>

                                <!-- Rank/Tribe 아이콘 -->
                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal"
                                            Margin="6,0,0,0">
                                    <Image Source="{Binding RankIcon, Mode=OneWay}"
                                           Width="18" Height="18"
                                           Stretch="Uniform"
                                           Margin="0,0,4,0"
                                           VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <Image Source="{Binding TribeIcon, Mode=OneWay}"
                                           Width="18" Height="18"
                                           Stretch="Uniform"
                                           VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- 필터 슬라이드 패널 (오버레이, 오른쪽→왼쪽 슬라이드) -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Border x:Name="FilterPanel"
                Grid.Column="2"
                Width="280"
                HorizontalAlignment="Right"
                Background="#D0FFFFFF"
                BorderBrush="#20000000"
                BorderThickness="1,0,0,0"
                CornerRadius="15,0,0,15"
                Padding="15"
                Panel.ZIndex="100"
                Visibility="Collapsed"
                ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="5" Direction="180"/>
            </Border.Effect>
            <Border.RenderTransform>
                <TranslateTransform x:Name="FilterPanelTranslate" X="300"/>
            </Border.RenderTransform>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- 필터 헤더 -->
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="고급 필터"
                                   FontSize="15"
                                   FontFamily="G마켓 산스 TTF Bold, Malgun Gothic"
                                   FontWeight="Bold"
                                   Foreground="#1F1F1F"
                                   VerticalAlignment="Center"/>
                        <Button x:Name="BtnCloseFilter"
                                Content="✕"
                                HorizontalAlignment="Right"
                                FontSize="14"
                                Foreground="#1F1F1F"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Padding="6,2"
                                Click="BtnCloseFilter_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <!-- 카테고리 체크박스 -->
                    <TextBlock Text="카테고리" FontSize="11" FontWeight="Bold" Foreground="#801F1F1F" Margin="0,0,0,6"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <CheckBox Content="요괴"
                                  IsChecked="{Binding FilterShowYokai, Mode=TwoWay}"
                                  Foreground="#1F1F1F" FontSize="12" Margin="0,0,15,0"
                                  VerticalContentAlignment="Center"/>
                        <CheckBox Content="NPC"
                                  IsChecked="{Binding FilterShowNPC, Mode=TwoWay}"
                                  Foreground="#1F1F1F" FontSize="12"
                                  VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- 정렬 -->
                    <TextBlock Text="정렬" FontSize="11" FontWeight="Bold" Foreground="#801F1F1F" Margin="0,0,0,6"/>
                    <ComboBox ItemsSource="{Binding SortOptionList}"
                              SelectedItem="{Binding SelectedSortOption, Mode=TwoWay}"
                              DisplayMemberPath="DisplayName"
                              FontSize="12"
                              Margin="0,0,0,12"
                              Padding="8,5"/>

                    <!-- Rank 필터 -->
                    <TextBlock Text="Rank" FontSize="11" FontWeight="Bold" Foreground="#801F1F1F" Margin="0,0,0,6"/>
                    <ComboBox ItemsSource="{Binding RankFilterList}"
                              SelectedItem="{Binding SelectedRankFilter, Mode=TwoWay}"
                              FontSize="12"
                              Margin="0,0,0,12"
                              Padding="8,5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Icon}" Width="16" Height="16"
                                           Margin="0,0,6,0" VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Tribe 필터 -->
                    <TextBlock Text="Tribe" FontSize="11" FontWeight="Bold" Foreground="#801F1F1F" Margin="0,0,0,6"/>
                    <ComboBox ItemsSource="{Binding TribeFilterList}"
                              SelectedItem="{Binding SelectedTribeFilter, Mode=TwoWay}"
                              FontSize="12"
                              Margin="0,0,0,12"
                              Padding="8,5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Icon}" Width="16" Height="16"
                                           Margin="0,0,6,0" VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- 좋아하는 음식 필터 -->
                    <TextBlock Text="좋아하는 음식" FontSize="11" FontWeight="Bold" Foreground="#801F1F1F" Margin="0,0,0,6"/>
                    <ComboBox ItemsSource="{Binding FoodFilterList}"
                              SelectedItem="{Binding SelectedFavoriteFoodFilter, Mode=TwoWay}"
                              FontSize="12"
                              Margin="0,0,0,12"
                              Padding="8,5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Icon}" Width="16" Height="16"
                                           Margin="0,0,6,0" VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- 싫어하는 음식 필터 -->
                    <TextBlock Text="싫어하는 음식" FontSize="11" FontWeight="Bold" Foreground="#801F1F1F" Margin="0,0,0,6"/>
                    <ComboBox ItemsSource="{Binding FoodFilterList}"
                              SelectedItem="{Binding SelectedHatedFoodFilter, Mode=TwoWay}"
                              FontSize="12"
                              Margin="0,0,0,12"
                              Padding="8,5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Icon}" Width="16" Height="16"
                                           Margin="0,0,6,0" VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- 해시 검색 -->
                    <TextBlock Text="해시 검색" FontSize="11" FontWeight="Bold" Foreground="#801F1F1F" Margin="0,0,0,6"/>
                    <Border Background="#20000000" CornerRadius="8" Margin="0,0,0,12">
                        <TextBox Text="{Binding FilterHash, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#1F1F1F"
                                 FontSize="12"
                                 FontFamily="Consolas"
                                 Padding="8,5"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Area (꺾인 곳 밑 10px부터 배치) -->
        <Grid Grid.Column="2" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- 1번(아이콘) + 2번(해산) 가로 배치 -->
                <RowDefinition Height="0"/> <!-- Spacing -->
                <RowDefinition Height="Auto"/> <!-- 3번 -->
                <RowDefinition Height="4"/> <!-- Spacing -->
                <RowDefinition Height="Auto"/> <!-- 4번 -->
                <RowDefinition Height="4"/> <!-- Spacing -->
                <RowDefinition Height="*"/> <!-- 5번 -->
            </Grid.RowDefinitions>
            <!-- Row 0: Panel 1 (Icon) + Panel 2 (Hash) -->
            <Grid Grid.Row="0" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Panel 1: Icon + Selectors (Integrated) -->
                <StackPanel Grid.Column="0" VerticalAlignment="Top">
                    <!-- Integrated Container Width 100 -->
                    <Border Width="100"
                            Background="#B0FFFFFF" BorderBrush="#20000000" BorderThickness="1"
                            CornerRadius="12" Padding="0" Margin="0,-90,0,8">
                         <StackPanel>
                             <!-- 1. Icon (100x100) -->
                             <Image x:Name="ImgCharacterIcon" Width="98" Height="98" Margin="0,1,0,0"
                                    Stretch="Uniform" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                             
                             <!-- 2. Integrated Selectors (Width 100) -->
                             <UniformGrid Columns="2" Height="30" Margin="0,0,0,0">
                                 <!-- Tribe -->
                                 <Button Command="{Binding ToggleTribeSelectorCommand}" 
                                         Style="{StaticResource PuniIconButtonStyle}" 
                                         Padding="4" Margin="0" BorderThickness="0,1,1,0" BorderBrush="#20000000"
                                         ToolTip="Change Tribe">
                                      <Image Source="{Binding SelectedCharacter.TribeIcon}" Stretch="Uniform"/>
                                 </Button>
                                 <!-- Rank -->
                                 <Button Command="{Binding ToggleRankSelectorCommand}" 
                                         Style="{StaticResource PuniIconButtonStyle}" 
                                         Padding="4" Margin="0" BorderThickness="0,1,0,0" BorderBrush="#20000000"
                                         ToolTip="Change Rank">
                                      <Image Source="{Binding SelectedCharacter.RankIcon}" Stretch="Uniform"/>
                                 </Button>
                             </UniformGrid>
                         </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Panel 2: Hash Values -->
                <Border Grid.Column="2"
                        Background="#B0FFFFFF"
                        BorderBrush="#20000000"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="12"
                        Margin="0,-90,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="3"/>
                    </Border.Effect>
                    <StackPanel>
                    <StackPanel>
                        <!-- (Removed "2번" label as requested) -->
                        <TextBlock Text="해쉬"
                                   FontSize="14"
                                   FontFamily="G마켓 산스 TTF Bold, Malgun Gothic"
                                   FontWeight="Bold"
                                   Margin="0,0,0,6"/>
                        <TextBlock FontSize="10" FontFamily="Consolas" Opacity="0.9" Foreground="#1F1F1F">
                            <Run Text="Model Hash: " Foreground="#801F1F1F"/>
                            <Run Text="{Binding BaseHashDisplay, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock FontSize="10" FontFamily="Consolas" Opacity="0.7" Margin="0,4,0,0" Foreground="#1F1F1F">
                            <Run Text="Name Hash:  " Foreground="#801F1F1F"/>
                            <Run Text="{Binding NameHashDisplay, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock FontSize="10" FontFamily="Consolas" Opacity="0.7" Margin="0,2,0,0" Foreground="#1F1F1F">
                            <Run Text="Desc Hash:  " Foreground="#801F1F1F"/>
                            <Run Text="{Binding DescriptionHashDisplay, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>


            <!-- Panel 3: 메달 위치 / 파일명 -->
            <Border Grid.Row="2"
                    Height="70"
                    Background="#B0FFFFFF"
                    BorderBrush="#20000000"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="12">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="3"/>
                </Border.Effect>
                <StackPanel>
                <StackPanel>
                    <!-- (Removed "3번" label as requested) -->
                    <TextBlock FontSize="11" Margin="0,0,0,2">
                        <Run Text="메달 위치: " FontWeight="SemiBold"/>
                        <Run Text="{Binding MedalPosX, Mode=OneWay, StringFormat='X={0}'}"/>
                        <Run Text=", "/>
                        <Run Text="{Binding MedalPosY, Mode=OneWay, StringFormat='Y={0}'}"/>
                    </TextBlock>
                    <TextBlock FontSize="10" Opacity="0.8">
                        <Run Text="파일명: "/>
                        <Run Text="{Binding FileNamePrefix, Mode=OneWay, StringFormat='{}{0:D2}.'}"/>
                        <Run Text="{Binding FileNameNumber, Mode=OneWay, StringFormat='{}{0:D3}.'}"/>
                        <Run Text="{Binding FileNameVariant, Mode=OneWay, StringFormat='{}{0:D2}'}"/>
                    </TextBlock>
                </StackPanel>
                </StackPanel>
            </Border>

            <!-- Panel 4: 기타 필드 -->
            <Border Grid.Row="4"
                    Height="70"
                    Background="#B0FFFFFF"
                    BorderBrush="#20000000"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="12">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="3"/>
                </Border.Effect>
                <StackPanel>
                    <!-- (Removed "4번" label as requested) -->
                    <TextBlock Text="{Binding Unk1Display, Mode=OneWay, StringFormat='Unk1: {0}'}"
                               FontSize="10" FontFamily="Consolas" Opacity="0.9" Margin="0,0,0,2"/>
                    <TextBlock Text="{Binding Unk2Display, Mode=OneWay, StringFormat='Unk2: {0}'}"
                               FontSize="10" FontFamily="Consolas" Opacity="0.8" Margin="0,0,0,2"/>
                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding IsYokai, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <!-- Tribe/Rank moved to Icon Panel, removed from here -->
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Panel 5: Description -->
            <Border Grid.Row="6"
                    Background="#B0FFFFFF"
                    BorderBrush="#20000000"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="12">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- (Removed "5번" label as requested) -->

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="TxtDescription"
                                   Text="{Binding DescriptionDisplay, Mode=OneWay}"
                                   Background="Transparent"
                                   TextWrapping="Wrap"
                                   FontSize="11"
                                   LineHeight="14"
                                   LineStackingStrategy="BlockLineHeight"
                                   VerticalAlignment="Stretch"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

    <!-- Tribe Selector Overlay -->
    <Grid Grid.Column="0" Grid.ColumnSpan="3" 
          Visibility="{Binding IsTribeSelectorVisible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}"
          Panel.ZIndex="100">
        <Border Background="#40000000">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleTribeSelectorCommand}"/>
            </Border.InputBindings>
        </Border>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="#F0FFFFFF" CornerRadius="15" Padding="20"
                BorderBrush="#40FFFFFF" BorderThickness="1"
                MinWidth="200">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Select Tribe" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <ItemsControl ItemsSource="{Binding TribeSelectionList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.SelectTribeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    CommandParameter="{Binding Key}"
                                    Style="{StaticResource PuniIconButtonStyle}" Width="48" Height="48" Margin="6"
                                    ToolTip="{Binding DisplayName}">
                                <Image Source="{Binding Icon}"/>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="Cancel" Command="{Binding ToggleTribeSelectorCommand}" 
                        Style="{StaticResource PuniCancelButtonStyle}" Margin="0,15,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>

    <!-- Rank Selector Overlay -->
    <Grid Grid.Column="0" Grid.ColumnSpan="3" 
          Visibility="{Binding IsRankSelectorVisible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}"
          Panel.ZIndex="100">
        <Border Background="#40000000">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleRankSelectorCommand}"/>
            </Border.InputBindings>
        </Border>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="#F0FFFFFF" CornerRadius="15" Padding="20"
                BorderBrush="#40FFFFFF" BorderThickness="1"
                MinWidth="200">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Select Rank" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <ItemsControl ItemsSource="{Binding RankSelectionList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.SelectRankCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    CommandParameter="{Binding Key}"
                                    Style="{StaticResource PuniIconButtonStyle}" Width="48" Height="48" Margin="6"
                                    ToolTip="{Binding DisplayName}">
                                <Image Source="{Binding Icon}"/>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="Cancel" Command="{Binding ToggleRankSelectorCommand}" 
                        Style="{StaticResource PuniCancelButtonStyle}" Margin="0,15,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
    </Grid>
</UserControl>
