<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ============================================ -->
    <!-- ?뙵 SAKURA SOFT COLOR PALETTE                  -->
    <!-- ============================================ -->

    <!-- Warm Gold (Primary Action toned down) -->
    <Color x:Key="PuniYellowLight">#FFFFE9A8</Color>
    <Color x:Key="PuniYellow">#FFFFC857</Color>
    <Color x:Key="PuniYellowDark">#FFCC9A2E</Color>
    <Color x:Key="PuniGold">#FFB8892D</Color>

    <!-- Soft Cyan -->
    <Color x:Key="PuniCyanLight">#FFB2EBF2</Color>
    <Color x:Key="PuniCyan">#FF80DEEA</Color>
    <Color x:Key="PuniCyanDark">#FF4DD0E1</Color>

    <!-- Soft Purple -->
    <Color x:Key="PuniPurpleLight">#FFE1BEE7</Color>
    <Color x:Key="PuniPurple">#FFCE93D8</Color>
    <Color x:Key="PuniPurpleDark">#FFBA68C8</Color>

    <!-- Alerts toned down -->
    <Color x:Key="PuniRed">#FFEF9A9A</Color>
    <Color x:Key="PuniGreen">#FFA5D6A7</Color>

    <!-- Neutrals -->
    <Color x:Key="PuniWhite">#FFFFFFFF</Color>
    <Color x:Key="PuniBlack">#FF222222</Color>
    <Color x:Key="PuniSoftBorder">#40FFFFFF</Color>
    <Color x:Key="PuniTextDark">#FF2D2D2D</Color>

    <!-- Glass tones (important for your UI) -->
    <Color x:Key="PuniGlassTop">#CCFFFFFF</Color>
    <Color x:Key="PuniGlassMid">#99FFF8F4</Color>
    <Color x:Key="PuniGlassBottom">#66FFEFE8</Color>

    <!-- ============================================ -->
    <!-- BRUSHES                                       -->
    <!-- ============================================ -->

    <SolidColorBrush x:Key="PuniBorderBrush" Color="{StaticResource PuniSoftBorder}"/>
    <SolidColorBrush x:Key="PuniTextBrush" Color="{StaticResource PuniTextDark}"/>
    <SolidColorBrush x:Key="PuniYellowBrush" Color="{StaticResource PuniYellow}"/>
    <SolidColorBrush x:Key="PuniGoldBrush" Color="{StaticResource PuniGold}"/>
    <SolidColorBrush x:Key="PuniGlassBrush" Color="#99FFFFFF"/>

    <!-- ============================================ -->
    <!-- GRADIENTS                                     -->
    <!-- ============================================ -->

    <!-- ?뙵 Soft Glass Panel -->
    <LinearGradientBrush x:Key="PuniGlassPanelGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource PuniGlassTop}" Offset="0"/>
        <GradientStop Color="{StaticResource PuniGlassMid}" Offset="0.5"/>
        <GradientStop Color="{StaticResource PuniGlassBottom}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Soft Gold Button -->
    <LinearGradientBrush x:Key="PuniButtonYellowGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource PuniYellowLight}" Offset="0"/>
        <GradientStop Color="{StaticResource PuniYellow}" Offset="0.4"/>
        <GradientStop Color="{StaticResource PuniYellowDark}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PuniButtonYellowPressedGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource PuniYellow}" Offset="0"/>
        <GradientStop Color="{StaticResource PuniGold}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Gloss -->
    <LinearGradientBrush x:Key="PuniGlossOverlay" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#55FFFFFF" Offset="0"/>
        <GradientStop Color="#15FFFFFF" Offset="0.5"/>
        <GradientStop Color="#00FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- ============================================ -->
    <!-- SHADOWS (softer than original)                -->
    <!-- ============================================ -->

    <DropShadowEffect x:Key="PuniShadowNormal" Color="Black" Opacity="0.25" BlurRadius="10" ShadowDepth="2"/>
    <DropShadowEffect x:Key="PuniShadowHover" Color="Black" Opacity="0.35" BlurRadius="14" ShadowDepth="3"/>
    <DropShadowEffect x:Key="PuniShadowPressed" Color="Black" Opacity="0.2" BlurRadius="6" ShadowDepth="1"/>

    <!-- ============================================ -->
    <!-- ?뙵 PRIMARY BUTTON (SOFT)                      -->
    <!-- ============================================ -->

    <Style x:Key="PuniButtonPrimary" TargetType="Button">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PuniTextBrush}"/>
        <Setter Property="Padding" Value="20,8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Outer"
                            CornerRadius="26"
                            BorderBrush="{StaticResource PuniBorderBrush}"
                            BorderThickness="1.5"
                            Background="{StaticResource PuniButtonYellowGradient}"
                            Effect="{StaticResource PuniShadowNormal}">
                        <Grid>
                            <Border Background="{StaticResource PuniGlossOverlay}"
                                    CornerRadius="26"
                                    IsHitTestVisible="False"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Outer" Property="Effect" Value="{StaticResource PuniShadowHover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Outer" Property="Background" Value="{StaticResource PuniButtonYellowPressedGradient}"/>
                            <Setter TargetName="Outer" Property="Effect" Value="{StaticResource PuniShadowPressed}"/>
                            <Setter TargetName="Outer" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- ?뙵 GLASS PANEL                                 -->
    <!-- ============================================ -->

    <Style x:Key="PuniGlassPanel" TargetType="Border">
        <Setter Property="CornerRadius" Value="22"/>
        <Setter Property="Background" Value="{StaticResource PuniGlassPanelGradient}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PuniBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Effect" Value="{StaticResource PuniShadowNormal}"/>
        <Setter Property="Padding" Value="24"/>
    </Style>

    <!-- ============================================ -->
    <!-- ?뙵 ICON BUTTON                                 -->
    <!-- ============================================ -->

    <Style x:Key="PuniIconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#40FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#60FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- ?뙵 CANCEL BUTTON                               -->
    <!-- ============================================ -->

    <Style x:Key="PuniCancelButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#808080"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12" BorderBrush="#40808080" BorderThickness="1">
                        <ContentPresenter Margin="{TemplateBinding Padding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#20808080"/>
                            <Setter Property="Foreground" Value="#404040"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#40808080"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- ?뙵 TAB BUTTON (Segmented Control)              -->
    <!-- ============================================ -->

    <Style x:Key="PuniTabButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#CCFFFFFF"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="16,6"/>
        <Setter Property="Margin" Value="2,0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="8" 
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FFFFFF"/>
                            <Setter Property="Foreground" Value="#333333"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="4" ShadowDepth="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#FFFFFFFF"/>
                            <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsChecked" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="border" Property="Background" Value="#F0FFFFFF"/>
                            <Setter Property="Foreground" Value="#333333"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- iOS-style list/filter shared styles -->
    <Style x:Key="IosListGroupCardStyle" TargetType="Border">
        <Setter Property="Background" Value="#40FFFFFF"/>
        <Setter Property="BorderBrush" Value="#2AFFFFFF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="18"/>
        <Setter Property="Padding" Value="14"/>
    </Style>

    <Style x:Key="IosSearchFieldStyle" TargetType="Border">
        <Setter Property="Background" Value="#52FFFFFF"/>
        <Setter Property="BorderBrush" Value="#2AFFFFFF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="14"/>
    </Style>

    <Style x:Key="IosListItemStyle" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0,3"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="Cell"
                            Background="{TemplateBinding Background}"
                            CornerRadius="14"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Cell" Property="Background" Value="#26FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Cell" Property="Background" Value="#7A0A84FF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

        <Style x:Key="IosFilterChipCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="#233445"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Border x:Name="Chip"
                                Background="#66FFFFFF"
                                BorderBrush="#3E9AA7B8"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="11,6">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Chip" Property="Background" Value="#85F6FAFF"/>
                            <Setter TargetName="Chip" Property="BorderBrush" Value="#5A8DA8C0"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Chip" Property="Background" Value="#DDE7F2FF"/>
                            <Setter Property="Foreground" Value="#14354F"/>
                            <Setter TargetName="Chip" Property="BorderBrush" Value="#909BB5D4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="IosFilterComboBoxItemStyle" TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="#1F2D3D"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Grid Margin="2">
                        <Border x:Name="ItemButton"
                                Background="Transparent"
                                BorderBrush="#1E000000"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="ItemButton" Property="Background" Value="#66ECF3FF"/>
                            <Setter TargetName="ItemButton" Property="BorderBrush" Value="#4E8EA6BE"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ItemButton" Property="Background" Value="#DDE7F2FF"/>
                            <Setter Property="Foreground" Value="#14354F"/>
                            <Setter TargetName="ItemButton" Property="BorderBrush" Value="#909BB5D4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="IosFilterComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="#70FFFFFF"/>
        <Setter Property="BorderBrush" Value="#4A8EA3B8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#1F2D3D"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource IosFilterComboBoxItemStyle}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid SnapsToDevicePixels="True">
                        <Border x:Name="FieldBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="11"/>

                        <ContentPresenter x:Name="ContentSite"
                                          Margin="10,0,34,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"/>

                        <ToggleButton x:Name="DropDownToggle"
                                      Width="24"
                                      Height="22"
                                      Margin="0,0,4,0"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Focusable="False"
                                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      Background="#2DFFFFFF"
                                      BorderBrush="#20000000"
                                      BorderThickness="1"
                                      Cursor="Hand">
                            <TextBlock Text="v"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="#B0223445"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </ToggleButton>

                        <Popup x:Name="PART_Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Fade">
                            <Border Margin="0,6,0,0"
                                    Background="#F2FBFDFF"
                                    BorderBrush="#4A8EA3B8"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="4">
                                <ScrollViewer MaxHeight="320">
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="FieldBorder" Property="BorderBrush" Value="#6C829EB8"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="FieldBorder" Property="BorderBrush" Value="#A278A6D4"/>
                            <Setter TargetName="FieldBorder" Property="Background" Value="#88FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="IosSegmentedRadioStyle" TargetType="RadioButton" BasedOn="{StaticResource PuniTabButtonStyle}">
        <Setter Property="Padding" Value="18,7"/>
        <Setter Property="Margin" Value="2,0"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

</ResourceDictionary>

